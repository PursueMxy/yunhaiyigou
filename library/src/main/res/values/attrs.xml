<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="show_left" format="boolean" />
        <attr name="left_content" format="reference|string" />
        <attr name="left_text_color" format="color|reference" />
        <attr name="left_text_size" format="reference|dimension" />
        <attr name="left_drawable" format="reference" />
        <attr name="title_content" format="reference|string" />
        <attr name="title_text_color" format="reference|color" />
        <attr name="title_text_size" format="reference|dimension" />
        <attr name="show_right" format="boolean" />
        <attr name="right_text_color" format="color|reference" />
        <attr name="right_text_size" format="reference|dimension" />
        <attr name="right_content" format="reference|string" />
        <attr name="right_drawable" format="reference" />
        <attr name="padding_status_bar" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgressWebView">
        <attr name="showProgress" format="boolean" />
        <attr name="urlClickable" format="boolean" />
    </declare-styleable>
    <style name="color_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <declare-styleable name="VerificationCodeView">
        <attr name="codeCount" format="integer" />
        <attr name="codeType">
            <enum name="number" value="0" />
            <enum name="numberPassword" value="1" />
            <enum name="text" value="2" />
            <enum name="textPassword" value="3" />
        </attr>
        <attr name="codeMode">
            <enum name="fix" value="0" />
            <enum name="average" value="1" />
        </attr>
        <attr name="codeWidth" format="dimension|reference" />
        <attr name="codeHeight" format="dimension|reference" />
        <attr name="codeTextColor" format="color|reference" />
        <attr name="codeTextSize" format="dimension|reference" />
        <attr name="codeEmptyBackground" format="reference" />
        <attr name="codeFillBackground" format="reference" />
        <attr name="codeSpacing" format="dimension|reference" />
        <attr name="codeRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="AnimationNumberView">
        <attr name="showTopContent" format="boolean" />
        <attr name="topContent" format="string|reference" />
        <attr name="showAnimation" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NumberView">
        <attr name="subBackground" format="reference" />
        <attr name="subSrc" format="reference" />
        <attr name="contentSize" format="dimension" />
        <attr name="contentColor" format="color|reference" />
        <attr name="contentBackground" format="reference" />
        <attr name="contentWidthPercent" format="float" />
        <attr name="itemSize" format="dimension" />
        <attr name="addBackground" format="reference" />
        <attr name="addSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="DeleteEditText">
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="MaxHeightScrollView">
        <attr name="maxHeight" format="dimension|reference" />
    </declare-styleable>

    <!-- PopupWindow 动画从下到上 -->
    <style name="PopAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <declare-styleable name="PasswordEditText">
        <!--密码个数-->
        <attr name="passwordNumber" format="integer"/>
        <!--密码原点的半径-->
        <attr name="passwordRadius" format="dimension"/>
        <!--密码原点的颜色-->
        <attr name="passwordColor" format="color"/>
        <!--分割线的颜色-->
        <attr name="divisionLineColor" format="color"/>
        <!--分割线的大小  指宽度-->
        <attr name="divisionLineSize" format="dimension"/>
        <!--背景边框的颜色-->
        <attr name="bgColor" format="color"/>
        <!--背景边框的大小-->
        <attr name="bgSize" format="dimension"/>
        <!--背景边框的圆角大小-->
        <attr name="bgCorner" format="dimension"/>

    </declare-styleable>
</resources>