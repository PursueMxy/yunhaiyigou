<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/ivGoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,175:100"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/imgthumb" />

    <TextView
        android:id="@+id/tvMerchant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22.5dp"
        android:textColor="@color/B66"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/ivGoods"
        app:layout_constraintStart_toStartOf="@id/ivGoods"
        app:layout_constraintTop_toBottomOf="@id/ivGoods"
        tools:text="梦洁" />

    <ImageView
        android:id="@+id/ivBusinessLogo"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_r18"
        app:layout_constraintBottom_toTopOf="@id/tvMerchant"
        app:layout_constraintEnd_toEndOf="@id/ivGoods"
        app:layout_constraintStart_toStartOf="@id/ivGoods"
        tools:src="@mipmap/business_logo" />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/GDF"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="@id/ivGoods"
        app:layout_constraintStart_toStartOf="@id/ivGoods"
        app:layout_constraintTop_toBottomOf="@id/tvMerchant"
        tools:text="居家生活仪式感" />
</androidx.constraintlayout.widget.ConstraintLayout>