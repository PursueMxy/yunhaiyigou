<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_r6"
    android:paddingBottom="13dp">

    <ImageView
        android:id="@+id/ivGoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/du_kang_jiu" />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:paddingHorizontal="4.5dp"
        android:textColor="@color/B00"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/ivGoods"
        app:layout_constraintStart_toStartOf="@id/ivGoods"
        app:layout_constraintTop_toBottomOf="@id/ivGoods"
        tools:text="YKMR 轻奢品牌 碎花雪纺连衣裙子女装早春2021年..." />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        android:paddingHorizontal="4.5dp"
        android:textColor="@color/RE3"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/ivGoods"
        app:layout_constraintTop_toBottomOf="@id/tvGoodsName"
        tools:text="￥356.00" />

    <TextView
        android:id="@+id/tvEvaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:paddingHorizontal="4.5dp"
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/ivGoods"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        tools:text="500+条评价   98%好评" />

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="4.5dp"
        android:text="YKMR旗舰店"
        android:textColor="@color/B99"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/ivGoods"
        app:layout_constraintTop_toBottomOf="@id/tvEvaluation" />

    <TextView
        android:id="@+id/tvIntoStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableEnd="@mipmap/arrow_right"
        android:paddingHorizontal="4.5dp"
        android:text="@string/into_the_store"
        android:textColor="@color/B33"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tvShopName"
        app:layout_constraintStart_toEndOf="@id/tvShopName"
        app:layout_constraintTop_toTopOf="@id/tvShopName" />
</androidx.constraintlayout.widget.ConstraintLayout>