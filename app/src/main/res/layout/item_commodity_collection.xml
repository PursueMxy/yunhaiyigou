<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="15dp">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cbCartCheck"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20.5dp"
        android:background="@null"
        android:button="@drawable/selector_pay"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivGoods"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="24.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toEndOf="@id/cbCartCheck"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/du_kang_jiu" />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7.5dp"
        android:layout_marginEnd="17.5dp"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/B33"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivGoods"
        app:layout_constraintTop_toTopOf="@id/ivGoods"
        tools:text="【酒厂直供】杜康秘藏1号 大容量口粮酒 52度浓香型白酒..." />


    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="¥899"
        android:textColor="@color/RE3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/ivGoods"
        app:layout_constraintStart_toEndOf="@id/ivGoods" />


</androidx.constraintlayout.widget.ConstraintLayout>