<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_r6"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/ivGoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/watch" />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/B00"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/ivGoods"
        tools:text="LV  2021年全球限量款玫红色手提包..." />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9.5dp"
        android:textColor="@color/RE3"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivAdd"
        app:layout_constraintBottom_toBottomOf="@id/ivAdd"
        tools:text="￥3８999" />

    <ImageView
        android:id="@+id/ivAdd"
        android:layout_marginEnd="7.5dp"
        android:layout_marginTop="5.5dp"
        app:layout_constraintTop_toBottomOf="@id/tvGoodsName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/buy_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_r100"
        android:backgroundTint="@color/RE3"/>
</androidx.constraintlayout.widget.ConstraintLayout>