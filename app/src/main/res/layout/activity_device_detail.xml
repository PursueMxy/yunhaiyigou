<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xdys.library.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:left_drawable="@mipmap/arrow_left_b"
        app:right_content="@string/device_detail"
        app:right_text_color="@color/B99"
        app:right_text_size="16sp"
        app:show_left="true"
        app:show_right="true"
        tools:layout_height="48dp" />

    <FrameLayout
        android:id="@+id/flDeviceName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="19dp"
            android:text="@string/equipment_name"
            android:textColor="@color/B00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="13dp"
            android:drawableEnd="@mipmap/arrow_right_s"
            android:drawablePadding="8dp"
            android:textColor="@color/B99"
            android:textSize="15sp"
            tools:text="iPhone 12" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="19dp"
            android:text="@string/equipment_type"
            android:textColor="@color/B00"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="13dp"
            android:drawablePadding="8dp"
            android:textColor="@color/B99"
            android:textSize="15sp"
            tools:text="iPhone 12" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/BED" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="19dp"
            android:text="@string/last_login_time"
            android:textColor="@color/B00"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="13dp"
            android:drawablePadding="8dp"
            android:textColor="@color/B99"
            android:textSize="15sp"
            tools:text="iPhone 12" />
    </FrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>