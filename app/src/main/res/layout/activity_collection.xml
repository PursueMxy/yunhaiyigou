<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xdys.library.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:left_drawable="@mipmap/arrow_left_b"
        app:right_content="@string/edit"
        app:right_text_color="@color/B99"
        app:right_text_size="16sp"
        app:show_left="true"
        app:show_right="true"
        tools:layout_height="48dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@color/RFF"
        android:backgroundTint="@android:color/transparent"
        android:paddingStart="6dp"
        app:layout_constraintBottom_toBottomOf="@id/titleBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/RFF"
        app:tabIndicatorGravity="bottom"
        app:tabMinWidth="20dp"
        app:tabMode="fixed"
        app:tabPaddingEnd="13dp"
        app:tabPaddingStart="13dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/B33"
        app:tabTextAppearance="@style/TabLayoutFind"
        app:tabTextColor="@color/B33" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewCollectionBottom"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@android:color/white"
        android:elevation="20dp"
        android:paddingHorizontal="15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvCollectionCheckAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="15.5dp"
            android:gravity="center_vertical"
            android:minHeight="32dp"
            android:text="@string/all_selected"
            android:textColor="@color/B66"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/selector_pay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCancelCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_r100"
            android:backgroundTint="@color/RFF"
            android:gravity="center_horizontal"
            android:minWidth="120dp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="8dp"
            android:text="@string/cancel_collection"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>