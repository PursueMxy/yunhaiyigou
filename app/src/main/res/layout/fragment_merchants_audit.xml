<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.xdys.library.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:left_drawable="@mipmap/arrow_left"
        app:show_left="true"
        app:title_content="@string/merchant_settled"
        app:title_text_color="@color/B33"
        tools:layout_height="48dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="53dp"
        android:src="@mipmap/submitted_successfully" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28.5dp"
        android:text="@string/submitted_successfully"
        android:textColor="@color/B33"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp"
        android:gravity="center_horizontal"
        android:text="您的申请已提交后台审核\n我们会在1-3个工作日内给您反馈\n请耐心等待！"
        android:textColor="@color/B99"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCheckProgress"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="52.5dp"
        android:layout_marginTop="87dp"
        android:background="@drawable/bg_r100"
        android:backgroundTint="@color/RFF"
        android:gravity="center"
        android:text="@string/check_progress"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvBackMine"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:layout_marginTop="34dp"
        android:layout_marginHorizontal="52.5dp"
        android:background="@drawable/box_r100"
        android:backgroundTint="@color/RFF"
        android:text="@string/back_to_personal_center"
        android:textColor="@color/RFF"
        android:textSize="16sp" />
</androidx.appcompat.widget.LinearLayoutCompat>