<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="12.5dp">

    <ImageView
        android:id="@+id/ivMallActivities"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:src="@mipmap/mall_activities"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="@string/mall_activities"
        android:textColor="@color/B51"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivMallActivities"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text=" 17:41"
        android:textColor="@color/B99"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        android:text="618超级优惠，全场买1000减500元..."
        android:textColor="@color/BCC"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/ivMallActivities"
        app:layout_constraintStart_toEndOf="@id/ivMallActivities" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_r100"
        android:backgroundTint="@color/RFF"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/ivMallActivities"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="14.5dp"
        android:layout_marginTop="12.5dp"
        android:background="@color/BCC"
        app:layout_constraintTop_toBottomOf="@id/ivMallActivities" />
</androidx.constraintlayout.widget.ConstraintLayout>