<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginHorizontal="52dp"
    android:background="@mipmap/bg_authentication"
    android:minHeight="330dp">


    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:src="@mipmap/close"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseAppTint" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="为了保障您的账户安全，请完成实名认证！"
        android:textColor="@color/B66"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tvAuthenticateNow" />

    <TextView
        android:id="@+id/tvAuthenticateNow"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_r100"
        android:backgroundTint="@color/BL00"
        android:gravity="center"
        android:text="@string/authenticate_now"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>