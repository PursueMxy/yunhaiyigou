<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.5dp"
        android:background="@drawable/bg_r100"
        android:backgroundTint="@color/BE0"
        android:paddingHorizontal="15.5dp"
        android:paddingVertical="8dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10:23" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_r10"
        android:orientation="vertical"
        android:paddingHorizontal="12.5dp"
        app:layout_constraintTop_toBottomOf="@id/tvTime">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.5dp"
            android:textColor="@color/B00"
            android:textSize="15sp"
            tools:text="618超级优惠，活动狂欢开启！" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="@color/B99"
            android:textSize="14sp"
            tools:text="杜康古城酒业商城全场满减优惠，下单就送好礼品，手慢无，杜康古城酒业商城全场满减优惠，下单就送好礼品..." />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="13dp"
            android:background="@color/BF2" />


        <TextView
            android:id="@+id/tvCheckDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="10dp"
            android:drawableEnd="@mipmap/arrow_right_s"
            android:text="@string/check_details"
            android:textColor="@color/B66"
            android:textSize="14sp"
            tools:ignore="UseCompatTextViewDrawableXml" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>